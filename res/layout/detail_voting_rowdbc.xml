<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:minHeight="125dp"
	android:layout_height="fill_parent" android:orientation="horizontal">
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/linearLayout1" android:layout_height="fill_parent"
		android:orientation="vertical" android:padding="5dp">
		<ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/isok" android:background="@drawable/button_fup"
			android:text="Y" android:textOn="" android:textOff=""/>
		<ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/maybe" android:background="@drawable/button_qm"
			android:text="QM" android:textOn="" android:textOff=""/>
		<ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/isko" android:background="@drawable/button_fdn"
			android:text="N" android:textOn="" android:textOff=""/>
		<!--ToggleButton android:layout_width="40dp" android:layout_height="39dp"
			android:id="@+id/isko" android:background="@drawable/button_fdn"
			android:text="N" android:textOn="" android:textOff=""/-->
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/linearLayout2" android:orientation="vertical"
		android:layout_weight="5" android:layout_height="fill_parent">
		<LinearLayout xmlns:app="http://schemas.android.com/apk/res/eu.thecoder4.gpl.pleftdroid"
		    android:layout_width="fill_parent"
			android:id="@+id/linearLayout3" android:orientation="vertical" android:layout_height="fill_parent">
			<eu.thecoder4.gpl.pleftdroid.DateVoteBarView
			    android:id="@+id/vadate" android:layout_height="wrap_content" android:layout_width="fill_parent"
				app:textSize="30dp" app:textColor="#ffffffff" />
			<LinearLayout android:layout_width="fill_parent"
				android:id="@+id/linearLayout4" android:layout_height="fill_parent">
				<TextView android:text="" android:id="@+id/dcomment"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_height="fill_parent" android:singleLine="false"/>
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/addcommentico"
					android:src="@drawable/addcmnt" android:layout_weight="0"
					android:padding="5dp"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
